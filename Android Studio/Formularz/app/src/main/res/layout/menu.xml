<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutToolBar"
            android:layout_width="1080px"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:paddingStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id='@+id/imageMenu'
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:src='@drawable/ic_menu'/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="405dp"
            android:layout_height="674dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutToolBar">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="800px"
                android:layout_height="130px"
                android:layout_gravity="center"
                android:layout_marginTop="25px"
                android:layout_marginBottom="100px"
                android:text="Polecane Produkty"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="95px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/bmw_m2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="BMW M2" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 200000zł" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ferrari_f8" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="Ferrari F8 Tributo" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 700000zł" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460px"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/mclaren_720" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="Mclaren 720S" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 1000000zł" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/porsche_boxter" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="Porsche 718 Boxster" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 450000zł" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/audi_r8" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="Audi R8" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 800000zł" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="350px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="400px"
                        android:layout_height="200px"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/lamborghini_aventador_svj" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="50px"
                        android:text="Lamborghini Aventador" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:textSize="50px"
                        android:text="Cena: 2500000zł" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu" />


</androidx.drawerlayout.widget.DrawerLayout>