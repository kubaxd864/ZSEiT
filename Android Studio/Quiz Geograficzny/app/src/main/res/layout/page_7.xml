<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="450px"
            android:layout_height="125px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:text="Pytanie 7"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="100px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="305dp"
            android:layout_height="150px"
            android:layout_marginTop="45px"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Jaki kraj widzisz na zdjęciu?"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:src="@drawable/italy" />

        <TextView
            android:id="@+id/odpowiedzi"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Wybierz prawidłową odpowiedz:"
            android:textSize="60px" />

        <Button
            android:id="@+id/wlochy"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Włochy"
            android:textColor="@color/black"
            android:textSize="50px" />

        <Button
            android:id="@+id/Chorwacja"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Chorwacja"
            android:textColor="@color/black"
            android:textSize="50px" />

        <Button
            android:id="@+id/grecja"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Grecja"
            android:textColor="@color/black"
            android:textSize="50px" />

        <Button
            android:id="@+id/peru"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Peru"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>