<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="450px"
            android:layout_height="125px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="30px"
            android:text="Pytanie 4"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="100px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="305dp"
            android:layout_height="150px"
            android:layout_marginTop="45px"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Ze stolicy jakiego kraju pochodzi to zdjęcie?"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:src="@drawable/london" />

        <TextView
            android:id="@+id/odpowiedzi"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Wybierz prawidłową odpowiedz:"
            android:textSize="60px" />

        <Button
            android:id="@+id/austria"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Z Austrii"
            android:textColor="@color/black"
            android:textSize="50px" />

        <Button
            android:id="@+id/anglia"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Z Wielkiej Brytanii"
            android:textColor="@color/black"
            android:textSize="35px" />

        <Button
            android:id="@+id/francja"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Z Francji"
            android:textColor="@color/black"
            android:textSize="50px" />

        <Button
            android:id="@+id/slowacja"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:text="Ze Słowacji"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>