<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/red"
        android:orientation="vertical">

        <TextView
            android:layout_width="950px"
            android:layout_height="match_parent"
            android:text="Oblicz Średnie Spalanie"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="90px" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="150px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Spalone paliwo w litrach:"
            android:textSize="60px" />

        <EditText
            android:id="@+id/spalonepaliwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Ilość przejechanych kilometrów"
            android:textSize="60px" />

        <EditText
            android:id="@+id/ilosckilometrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Cena za litr paliwa"
            android:textSize="60px" />

        <EditText
            android:id="@+id/cena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Oblicz"
            android:textColor="@color/black"
            android:textSize="50px" />

        <TextView
            android:id="@+id/spalanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="70px"
            android:text="" />

        <TextView
            android:id="@+id/cena1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="70px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>